{
  "manifest_version": 3,
  "name": "ChatGPT Refresher",
  "version": "1.0",
  "description": "This extension refreshes the ChatGPT login page every 5 seconds until the service is ready.",
  "host_permissions": ["<all_urls>"],
  "permissions": ["activeTab"],
    "icons": {
        "16": "/images/icon-16.png",
        "48": "/images/icon-48.png",
        "128": "/images/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "/images/icon-16.png",
            "48": "/images/icon-48.png",
            "128": "/images/icon-128.png"
        }
	}
}